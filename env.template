# ============================================
# SMS Gateway API - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# cp env.template .env

# ============================================
# Server Configuration
# ============================================
# Host address to bind the server to
SERVER_HOST=0.0.0.0

# Port number for the API server
SERVER_PORT=8080

# ============================================
# Database Configuration
# ============================================
# Database type: "sqlite" for development, "postgres" for production
DB_TYPE=sqlite

# PostgreSQL Configuration (only needed if DB_TYPE=postgres)
# Database host address
DB_HOST=localhost

# Database port
DB_PORT=5432

# Database username
DB_USER=postgres

# Database password
DB_PASSWORD=postgres

# Database name
DB_NAME=sms_gateway

# PostgreSQL SSL mode (disable, require, verify-ca, verify-full)
DB_SSLMODE=disable

# ============================================
# SMS Provider Configuration (egosms.co)
# ============================================
# Your egosms.co username
SMS_USERNAME=

# Your egosms.co password
SMS_PASSWORD=

# Default sender ID (appears as sender name on SMS)
SMS_SENDER_ID=

# Use sandbox mode (true/false)
# Set to "true" for testing, "false" for production
SMS_SANDBOX_MODE=true

# SMS API URLs (usually don't need to change these)
SMS_LIVE_URL=https://www.egosms.co/api/v1/json/
SMS_SANDBOX_URL=http://sandbox.egosms.co/api/v1/json/

# ============================================
# API Security Configuration
# ============================================
# JWT secret key (change this to a strong random string in production)
# Generate one with: openssl rand -hex 32
JWT_SECRET=your-secret-key-change-in-production

# ============================================
# Rate Limiting
# ============================================
# Global rate limit: requests per second
RATE_LIMIT_RPS=100

# ============================================
# Admin Panel Credentials
# ============================================
# Admin username for Basic Auth (used for /api/v1/admin/* endpoints)
ADMIN_USER=admin

# Admin password for Basic Auth (change this in production!)
ADMIN_PASSWORD=admin

